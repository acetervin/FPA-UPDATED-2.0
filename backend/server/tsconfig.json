{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "../dist",
    "rootDir": "..",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@shared/schema": ["../shared/schema"],
      "@/*": ["./*"]
    },
    "types": ["node"],
    "typeRoots": [
      "../node_modules/@types",
      "./types"
    ]
  },
  "include": ["./**/*"],
  "exclude": ["../node_modules", "../client", "../dist"]
}
