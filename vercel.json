
{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../dist/client"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node@3.2.29",
      "config": {
        "includeFiles": [
          "server/**",
          "shared/**"
        ],
        "maxDuration": 30
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
